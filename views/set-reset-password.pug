		script(type="text/javascript").
			var userAgent = window.navigator.userAgent
			var isIos =/iPhone|iPad|iPod/i.test(userAgent)
			var isAndoid = /Android/i.test(userAgent)
			var isMobile = isIos || isAndoid
			var isGearProtek = window.location.search.toLowerCase().includes('gearprotek')
			if (!isMobile) {
				document.location = isGearProtek
					? "https://gearprotek.com/"
					: "https://instaprotek.com/download-app"
			} else {
				var now = new Date().valueOf()
				setTimeout(function() {
					if (new Date().valueOf() - now > 100) return
					if (isIos) {
						document.location = isGearProtek
							? "https://apps.apple.com/us/app/gearprotek/id1499412334"
							: "https://apps.apple.com/us/app/instaprotek/id1456989327"
					} else if (isAndoid) {
						document.location = isGearProtek
							? "https://play.google.com/store/apps/details?id=com.gearprotek.app&hl=en_US"
							: "https://play.google.com/store/apps/details?id=com.instaprotek.app&hl=en"
					}
				}, 25)
				document.location = isGearProtek
					? "gearprotek://validate-otp" + window.location.search
					: "instaprotek://validate-otp" + window.location.search
			}